# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Codex専用環境変数（実行環境用）
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# 使い方:
# 1. このファイルを .env.codex にコピー
# 2. 実際のトークンを設定
# 3. .gitignore に .env.codex を追加済み
# 
# ⚠️ 重要: このファイルは絶対にGitにコミットしない
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Supabase CLI認証
SUPABASE_ACCESS_TOKEN=sbp_your_token_here
SUPABASE_PROJECT_REF=rtp_your_project_ref_here

# GitHub CLI認証
GH_TOKEN=ghp_your_github_token_here

# Vercel CLI認証（オプション）
VERCEL_TOKEN=your_vercel_token_here

# プロジェクト情報
PROJECT_NAME=o-log2
PROJECT_PATH=/Users/shinya_reiji/Documents/workspace/o-log2

# Codex動作モード
CODEX_AUTO_INIT=true    # 起動時に自動初期化
CODEX_AUTO_DOCS=true    # 起動時にドキュメント読み込み
CODEX_SAFE_MODE=true    # セキュリティガードレール有効化
